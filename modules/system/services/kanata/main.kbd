(defsrc
  `    1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  caps a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft z    x    c    v    b    n    m    ,    .    /    rsft
  lctl lmet lalt           spc            ralt rmet cmp  rctl
)

(defalias
  lay (layer-toggle layouts)
  mod (layer-switch mods)
  nor (layer-switch normal)
  sym (layer-toggle symbols)
  spc (tap-hold-release 200 200 spc @sym)
  cps (tap-hold-release 200 200 caps @lay)
)

(defvar
  tap-time 200
  hold-time 200
)

(deftemplate home-row-mod (key mod)
  (multi f24 (tap-hold $tap-time $hold-time $key $mod))
)

(defalias
  a (t! home-row-mod a lsft)
  s (t! home-row-mod s lalt)
  d (t! home-row-mod d lmet)
  f (t! home-row-mod f lctl)
  j (t! home-row-mod j rctl)
  k (t! home-row-mod k rmet)
  l (t! home-row-mod l lalt)
  ; (t! home-row-mod ; rsft)
)

